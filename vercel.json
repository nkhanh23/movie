{
    "functions": {
        "*.php": {
            "runtime": "vercel-php@0.6.0",
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1",
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/robots.txt",
            "dest": "/robots.php"
        },
        {
            "src": "/sitemap.xml",
            "dest": "/sitemap.php"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}